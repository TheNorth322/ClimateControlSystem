    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="0 20 0 0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="32" Text="{Binding Name}" />

            <Grid Grid.Row="1" Margin="0 20 0 0 ">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        Text="Temperature" />

                    <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        IsReadOnly="True"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PlaceholderTextBoxStyle}"
                        Text="{Binding Temperature, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Margin="20 20 0 0" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Humidity" />
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        IsReadOnly="True"
                        HorizontalAlignment="Left"
                        Margin="20 20 0 0"
                        Style="{StaticResource PlaceholderTextBoxStyle}"
                        Text="{Binding Humidity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Carbon Dioxide" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        IsReadOnly="True"
                        HorizontalAlignment="Left"
                        Margin="20 20 0 0"
                        Style="{StaticResource PlaceholderTextBoxStyle}"
                        Text="{Binding CarbonDioxideLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="Light Level" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        IsReadOnly="True"
                        HorizontalAlignment="Left"
                        Margin="20 20 0 0"
                        Style="{StaticResource PlaceholderTextBoxStyle}"
                        DataContext="{Binding LightLevel}" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>